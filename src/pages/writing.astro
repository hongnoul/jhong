---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout bodyClass="page-no-scroll page-writing">
	<main class="mx-auto flex min-h-[calc(100vh-var(--marquee-height)-var(--nav-height))] max-w-4xl items-center justify-center overflow-hidden px-6">
		<figure class="relative overflow-hidden border border-neutral-200 bg-white">
			<video
				class="block h-auto w-full"
				src="/cable.mp4"
				autoplay
				muted
				loop
				playsinline
			></video>
			<figcaption class="pointer-events-none absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 font-[galmuri7] text-9xl text-white">
				WIP
			</figcaption>
		</figure>
	</main>
</BaseLayout>
