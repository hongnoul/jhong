<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=DotGothic16&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
		/>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/galmuri/dist/galmuri.css"
		/>
		<title>Astro</title>
	</head>
	<body>
		<main class="hero">
			<h1 class="hero-title">
				<span class="j">j</span><span class="period">.</span><span class="hong" data-alt="홍">洪</span>
			</h1>
		</main>
		<!-- <script type="module" src="/src/hero-preview.js"></script> -->
		<script>
			const hong = document.querySelector(".hong");
			if (hong) {
				hong.addEventListener("click", () => {
					const alt = hong.dataset.alt || "";
					hong.dataset.alt = hong.textContent || "";
					hong.textContent = alt;
				});
			}
		</script>
	</body>
</html>
<style>
	:global(body) {
		margin: 0;
		background: #fff;
		color: #111;
		font-family: "Times New Roman", Times, serif;
	}

	.hero {
		min-height: 100vh;
		display: grid;
		place-items: center;
	}

	.hero-title {
		margin: 0;
		display: inline-flex;
		align-items: center;
		font-size: clamp(12em, 16vw, 12rem);
		letter-spacing: 0;
		font-family: "Galmuri14", sans-serif;
		color: #000;
		background-color: #fff;
		line-height: 1;
	}

	.hero-title .hong {
		display: inline-block;
		font-family: "Galmuri14", sans-serif;
		transition: font-size 240ms ease;
	}

	.hero-title .period {
		margin-left: -0.1em;
		margin-right: -0.15em;
		font-family: "galmuri11", sans-serif;
	}

		.hero-title .j {
		font-family: "galmuri7", sans-serif;
	}

	.hero-title .hong:hover {
		font-size: 1.75em;
	}
</style>
