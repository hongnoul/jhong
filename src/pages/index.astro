---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
		<main
			class="hero grid min-h-[calc(100vh-var(--nav-height))] place-items-center overflow-hidden"
		>
			<div class="flex flex-col items-center">
				<h1
					class="m-0 inline-flex items-center bg-white text-[clamp(12rem,20vw,100vw)] leading-none tracking-[0] text-black font-[Galmuri14] lg:text-[clamp(18rem,24vw,30rem)]"
				>
				<span class="font-[galmuri7] text-[#000]">j</span
				><span class=" font-[galmuri7] text-[#000]"
					>.</span
				><span
					class="hong inline-block font-[Galmuri7] text-[#000] transition-[font-size] duration-[200ms] ease-in-out lg:hover:text-[1.75em]"
					data-alt="홍"
					>洪</span
				>
				</h1>
			</div>
		</main>

		<script is:inline data-astro-rerun>
			const syncNavLanguage = (useKorean) => {
				localStorage.setItem("nav-lang", useKorean ? "ko" : "en");
				document
					.querySelectorAll('nav[aria-label="Primary"] a[data-label-en]')
					.forEach((link) => {
						const label = useKorean
							? link.dataset.labelKo
							: link.dataset.labelEn;
						if (label) {
							link.textContent = label;
						}
					});
			};

			const initHongToggle = () => {
				const hong = document.querySelector(".hong");
				if (!hong || hong.dataset.hongBound === "true") {
					return;
				}
				hong.dataset.hongBound = "true";
				if (hong.dataset.korean !== "true") {
					hong.dataset.korean = "false";
				}
				hong.addEventListener("click", () => {
					const alt = hong.dataset.alt || "";
					hong.dataset.alt = hong.textContent || "";
					hong.textContent = alt;
					const nextIsKorean = hong.dataset.korean !== "true";
					hong.dataset.korean = nextIsKorean ? "true" : "false";
					syncNavLanguage(nextIsKorean);
				});
			};

			document.addEventListener("astro:page-load", initHongToggle);
			if (document.readyState !== "loading") {
				initHongToggle();
			}
		</script>
	
</BaseLayout>
