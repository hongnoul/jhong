<style>
	:global(:root) {
		--marquee-height: 3rem;
		--nav-height: 3rem;
	}

	:global(body) {
		margin: 0;
		padding-top: var(--marquee-height);
		padding-bottom: var(--nav-height);
		background: #fff;
		color: #111;
		font-family: "Times New Roman", Times, serif;
	}

	.folder-nav {
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;
		height: var(--nav-height);
		display: flex;
		align-items: center;
		z-index: 10;
		background: transparent;
	}

	.folder-tabs {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.25rem;
		max-width: 960px;
		margin: 0 auto;
		width: 100%;
		padding: 0 1.5rem;
	}

	.folder-tab {
		background: transparent;
		border: 0;
		color: #000;
		font-family: "galmuri9", sans-serif;
		font-size: 0.95rem;
		letter-spacing: 0.08em;
		padding: 0;
		cursor: pointer;
		text-transform: lowercase;
	}

	.folder-tab.is-active {
		color: #000;
		text-decoration: underline 2px;
	}

	.folder-tab:hover {
		text-decoration: underline 2px;
	}

	.marquee {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		height: var(--marquee-height);
		overflow: hidden;
		display: flex;
		background: #fff;
		color: #000;
		z-index: 11;
	}

	.marquee-track {
		display: flex;
		align-items: center;
		gap: 2.5rem;
		padding-left: 2.5rem;
		white-space: nowrap;
		flex: 0 0 auto;
		min-width: 100%;
		animation: marquee-scroll 60s linear infinite;
		font-family: "galmuri9", sans-serif;
		font-size: 1.1rem;
		letter-spacing: 0.18em;
		text-transform: lowercase;
	}

	.marquee-track span {
		display: inline-block;
	}

	@keyframes marquee-scroll {
		from {
			transform: translateX(0);
		}
		to {
			transform: translateX(-100%);
		}
	}

	.hero {
		min-height: calc(100vh - var(--marquee-height) - var(--nav-height));
		display: grid;
		place-items: center;
	}

	.hero-title {
		margin: 0;
		display: inline-flex;
		align-items: center;
		font-size: clamp(12em, 16vw, 12rem);
		letter-spacing: 0;
		font-family: "Galmuri14", sans-serif;
		color: #000;
		background-color: #fff;
		line-height: 1;
	}

	.hero-title .hong {
		display: inline-block;
		color: #CD2E3A;
		font-family: "Galmuri14", sans-serif;
		transition: font-size 240ms ease;
	}

	.hero-title .period {
		margin-left: -0.1em;
		margin-right: -0.15em;
		font-family: "galmuri11", sans-serif;
		color: #0F64CD;
	}

		.hero-title .j {
		font-family: "galmuri7", sans-serif;
		color: #0F64CD;
	}

	.hero-title .hong:hover {
		font-size: 1.75em;
	}
</style>
