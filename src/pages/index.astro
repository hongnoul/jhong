---
import "../styles/global.css";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=DotGothic16&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
		/>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/galmuri/dist/galmuri.css"
		/>
		<title>Astro</title>
	</head>
	<body>
		<nav
			class="fixed bottom-0 left-0 right-0 z-10 flex h-[var(--nav-height)] items-center bg-transparent"
			aria-label="Primary"
		>
			<div
				class="mx-auto flex w-full max-w-[960px] items-center justify-between gap-5 px-6"
			>
				<button
					class="cursor-pointer bg-transparent p-0 font-[galmuri9] text-[0.95rem] lowercase tracking-[0.08em] text-black underline decoration-2"
					type="button"
				>
					home
				</button>
				<button
					class="cursor-pointer bg-transparent p-0 font-[galmuri9] text-[0.95rem] lowercase tracking-[0.08em] text-black hover:underline hover:decoration-2"
					type="button"
				>
					projects
				</button>
				<button
					class="cursor-pointer bg-transparent p-0 font-[galmuri9] text-[0.95rem] lowercase tracking-[0.08em] text-black hover:underline hover:decoration-2"
					type="button"
				>
					writing
				</button>
				<button
					class="cursor-pointer bg-transparent p-0 font-[galmuri9] text-[0.95rem] lowercase tracking-[0.08em] text-black hover:underline hover:decoration-2"
					type="button"
				>
					contact
				</button>
			</div>
		</nav>
		<div
			class="fixed left-0 right-0 top-0 z-[11] flex h-[var(--marquee-height)] overflow-hidden bg-white text-black"
			role="presentation"
			aria-hidden="true"
		>
			<div
				class="flex min-w-full flex-none items-center gap-10 whitespace-nowrap pl-10 font-[galmuri9] text-[1.1rem] lowercase tracking-[0.18em] animate-marquee"
			>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
			</div>
			<div
				class="flex min-w-full flex-none items-center gap-10 whitespace-nowrap pl-10 font-[galmuri9] text-[1.1rem] lowercase tracking-[0.18em] animate-marquee"
			>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
				<span>namyang@mit.edu</span>
			</div>
		</div>
		<main
			class="hero grid min-h-[calc(100vh-var(--marquee-height)-var(--nav-height))] place-items-center"
		>
			<h1
				class="m-0 inline-flex items-center bg-white text-[clamp(12em,16vw,12rem)] leading-none tracking-[0] text-black font-[Galmuri14]"
			>
				<span class="font-[galmuri7] text-[#000]">j</span
				><span class=" font-[galmuri7] text-[#000]"
					>.</span
				><span
					class="hong inline-block font-[Galmuri7] text-[#000] transition-[font-size] duration-[240ms] ease-in-out lg:hover:text-[1.75em]"
					data-alt="홍"
					>洪</span
				>
			</h1>
		</main>
		<!-- <script type="module" src="/src/hero-preview.js"></script> -->
		<script>
			const hong = document.querySelector(".hong");
			if (hong) {
				hong.addEventListener("click", () => {
					const alt = hong.dataset.alt || "";
					hong.dataset.alt = hong.textContent || "";
					hong.textContent = alt;
				});
			}
		</script>
	</body>
</html>
